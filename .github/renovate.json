{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"labels": [
		"Dependencies"
	],
	"lockFileMaintenance": {
		"enabled": false
	},
	"rangeStrategy": "bump",
	"packageRules": [
		{
			"description": "Maven rule",
			"matchManagers": ["maven"],
			"addLabels": ["Java"]
		},
		{
			"description": "Pin all npm dependencies (for pnpm monorepo)",
			"matchManagers": ["npm"],
			"respectLatest": false,
			"rangeStrategy": "pin",
			"addLabels": ["JavaScript"]
		},
		{
			"description": "Group Angular packages",
			"matchManagers": ["npm"],
			"matchPackagePatterns": ["^@angular"],
			"groupName": "angular-upgrade"
		},
		{
			"description": "Group TypeScript with Angular",
			"matchManagers": ["npm"],
			"matchPackageNames": ["typescript"],
			"groupName": "angular-upgrade"
		}
	]
}
