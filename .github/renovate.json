{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"labels": [
		"Dependencies"
	],
	"packageRules": [
		{
			"matchManagers": ["maven"],
			"addLabels": ["Java"]
		},
		{
			"description": "Pin dependency versions in package.json for pnpm projects",
			"matchManagers": ["npm"],
			"matchFileNames": ["pnpm-lock.yaml"],
			"respectLatest": false,
			"rangeStrategy": "pin"
		},
		{
			"description": "Group Angular packages",
			"matchManagers": ["npm"],
			"matchPackagePatterns": ["^@angular"],
			"groupName": "angular-upgrade",
			"addLabels": ["JavaScript"]
		},
		{
			"description": "Group TypeScript with Angular",
			"matchManagers": ["npm"],
			"matchPackageNames": ["typescript"],
			"groupName": "angular-upgrade",
			"addLabels": ["JavaScript"]
		},
		{
			"description": "Add label for all other npm packages",
			"matchManagers": ["npm"],
			"addLabels": ["JavaScript"]
		}
	],
	"lockFileMaintenance": {
		"enabled": false
	},
	"rangeStrategy": "bump"
}
